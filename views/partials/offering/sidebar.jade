.panel.panel-default
  .panel-heading
    strong.text-uppercase Catalogs
  div(ng-switch="listVM.list.status")
    .panel-body(ng-switch-default)
      .spinner
        span.fa.fa-spinner.fa-lg.fa-spin
    div(ng-switch-when="LOADED", ng-switch="listVM.list.length")
      .panel-body(ng-switch-when="0")
        .alert.alert-info
          span No catalogs launched.
      ul.nav.nav-stacked.nav-pills(ng-switch-default)
        li(ui-sref-active-eq="active")
          a(ui-sref="offering({ catalogueId: '' })", ui-sref-opts="{ reload: true, inherit: false }")
            span.item-text All
        li(ng-repeat="catalogue in listVM.list", ui-sref-active="active")
          a(ui-sref="offering({ catalogueId: catalogue.id })", ui-sref-opts="{ reload: true, inherit: false }")
            span.item-icon.fa.fa-angle-right
            span.item-text {{ catalogue.name }}
    div(ng-switch-when="ERROR")
      .panel-body
        .alert.alert-danger
          span {{ listVM.error }}