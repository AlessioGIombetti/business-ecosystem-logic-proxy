.row(ng-switch="detailVM.item.status")
  div(ng-switch-when="LOADED")
    .col-xs-12
      .panel.panel-default
        .panel-body
          .media
            .media-left
              .thumbnail.item-product-logo
                img(no-image, ng-src="{{ detailVM.item.getPicture() }}")
              .h4.text-center {{ detailVM.item.name }}
              ul.nav.nav-responsive.nav-pills
                li(ui-sref-active-eq="active")
                  a(ui-sref="offering.detail")
                    span.item-icon.fa.fa-newspaper-o
                    span.item-text.hidden-xs About
                li(ui-sref-active-eq="active")
                  a(ui-sref="offering.detail.pricing")
                    span.item-icon.fa.fa-credit-card
                    span.item-text.hidden-xs Price Plans
              .btn-toolbar(ng-show="user.isAuthenticated()")
                .btn-group.btn-group-justified
                  a.btn.btn-default(ng-click="user.order(detailVM.item)", ng-disabled="user.contains(detailVM.item)")
                    span.item-icon.fa.fa-shopping-cart
                    span.item-text {{ user.contains(detailVM.item) ? 'Added' : 'Add to Cart' }}
            .media-body
              ui-view(name="offering-content")
                blockquote {{ detailVM.item.description ? detailVM.item.description : 'No description provided.' }}
                dl
                  dt Version
                  dd {{ detailVM.item.productSpecification.version }}
                  dt Update date
                  dd
                    time(am-time-ago="detailVM.item.lastUpdate")
  div(ng-switch-when="ERROR")
    .alert.alert-danger.text-center {{ detailVM.error }}
  div(ng-switch-default)
    .col-xs-12
      .container-spinner
        span.fa.fa-spinner.fa-spin.fa-2x