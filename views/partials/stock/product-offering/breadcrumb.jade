.breadcrumb-triangle
  a(ui-sref="stock.offering", ui-sref-opts="{ reload: true, inherit: false }", ui-sref-active-eq="active")
    span.item-icon.fa.fa-server
    span.item-text.hidden-xs Offerings
  a.active(ng-if="searchVM.state.includes('stock.offering.update')", ui-sref="stock.offering.update", ui-sref-opts="{ reload: true }")
    span.item-icon.fa.fa-cube
    span.item-text.hidden-xs {{ updateVM.item.name }}
  a.active(ng-if="searchVM.state.includes('stock.offering.create')", ui-sref="stock.offering.create", ui-sref-opts="{ reload: true }")
    span.item-icon.fa.fa-plus-circle
    span.item-text.hidden-xs New Offering