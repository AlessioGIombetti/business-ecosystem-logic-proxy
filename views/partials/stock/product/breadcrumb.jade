ol.breadcrumb
  li
    a(ui-sref="stock.product", ui-sref-opts="{ reload: true, inherit: false }", ui-sref-active-eq="active")
      span.item-text.hidden-xs Product Specifications
  li(ng-show="searchVM.state.includes('stock.product.update')")
    a(ui-sref="stock.product.update", ui-sref-opts="{ reload: true }", ui-sref-active="active")
      span.item-text.hidden-xs {{ updateVM.item.name }}
  li(ng-show="searchVM.state.includes('stock.product.create')")
    a(ui-sref="stock.product.create", ui-sref-opts="{ reload: true }", ui-sref-active-eq="active")
      span.item-text.hidden-xs New Product Specification