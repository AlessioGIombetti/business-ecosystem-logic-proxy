.breadcrumb-triangle
  a(ui-sref="stock.product", ui-sref-opts="{ reload: true, inherit: false }", ui-sref-active-eq="active")
    span.item-icon.fa.fa-server
    span.item-text.hidden-xs Product Specifications
  a.active(ng-if="searchVM.state.includes('stock.product.update')", ui-sref="stock.product.update", ui-sref-opts="{ reload: true }")
    span.item-icon.fa.fa-file
    span.item-text.hidden-xs {{ updateVM.item.name }}
  a.active(ng-if="searchVM.state.includes('stock.product.create')", ui-sref="stock.product.create", ui-sref-opts="{ reload: true }")
    span.item-icon.fa.fa-plus-circle
    span.item-text.hidden-xs New Product Specification