.btn-toolbar
  .btn-group
    a.btn.btn-default(ui-sref="stock.catalogue", ui-sref-opts="{ reload: true, inherit: false }", ui-sref-active-eq="active")
      span.item-icon.fa.fa-search
      span.item-text.hidden-xs Search catalogue
  .btn-group.pull-right
    a.btn.btn-default(ui-sref="stock.catalogue.create", ui-sref-opts="{ inherit: false }")
      span.item-icon.fa.fa-plus-circle
      span.item-text.hidden-xs New catalogue
    a.btn.btn-default(ng-click="searchVM.showFilters()")
      span.item-icon.fa.fa-sliders
      span.item-text.hidden-xs Filters