ol.breadcrumb
  li
    a(ui-sref="stock.catalogue", ui-sref-opts="{ reload: true, inherit: false }", ui-sref-active-eq="active")
      span.item-text.hidden-xs Catalogs
  li(ng-show="searchVM.state.includes('stock.catalogue.update')")
    a(ui-sref="stock.catalogue.update", ui-sref-opts="{ reload: true }", ui-sref-active="active")
      span.item-text.hidden-xs {{ updateVM.item.name }}
  li(ng-show="searchVM.state.includes('stock.catalogue.create')")
    a(ui-sref="stock.catalogue.create", ui-sref-opts="{ reload: true }", ui-sref-active-eq="active")
      span.item-text.hidden-xs New Catalog