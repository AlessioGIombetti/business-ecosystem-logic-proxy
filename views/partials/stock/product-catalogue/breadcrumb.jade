.breadcrumb-triangle
  a(ui-sref="stock.catalogue", ui-sref-opts="{ reload: true, inherit: false }", ui-sref-active-eq="active")
    span.item-icon.fa.fa-server
    span.item-text.hidden-xs Catalogs
  a.active(ng-if="searchVM.state.includes('stock.catalogue.update')", ui-sref="stock.catalogue.update", ui-sref-opts="{ reload: true }")
    span.item-icon.fa.fa-book
    span.item-text.hidden-xs {{ updateVM.item.name }}
  a.active(ng-if="searchVM.state.includes('stock.catalogue.create')", ui-sref="stock.catalogue.create", ui-sref-opts="{ reload: true }")
    span.item-icon.fa.fa-plus-circle
    span.item-text.hidden-xs New Catalog