.breadcrumb-triangle
  a(ui-sref="inventory.productOrder", ui-sref-opts="{ reload: true, inherit: false }", ui-sref-active-eq="active")
    span.item-icon.fa.fa-server
    span.item-text.hidden-xs Product Orders
  a.active(ng-if="searchVM.state.includes('inventory.productOrder.update')", ui-sref="inventory.productOrder.update", ui-sref-opts="{ reload: true }")
    span.item-icon.fa.fa-shopping-bag
    span.item-text.hidden-xs {{ updateVM.item.name }}