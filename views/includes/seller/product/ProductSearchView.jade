.row
  .col-xs-12
    ol.breadcrumb.breadcrumb-default
      li.active
        a(ng-click="showSearchView()")
          | Search Product
      li
        a(ng-click="showCreateView()")
          | New Product
  .col-xs-12(ng-hide="!productList.length && !searchFailed")
    .btn-toolbar.pull-right
      .btn-group
        button.btn.btn-default(type="button", ng-click="showFilterView()")
          span.btn-icon.fa.fa-sliders
          span.btn-text Filters
      .btn-group
        button.btn.btn-default(type="button", ng-class="{ 'active' : resultView == 0 }", ng-click="showResultView(0)")
          i.fa.fa-fw.fa-th-list
        button.btn.btn-default(type="button", ng-class="{ 'active' : resultView == 1 }", ng-click="showResultView(1)")
          i.fa.fa-fw.fa-th
  .col-xs-12(ng-if="productListWaiting")
    .container-spinner
      i.fa.fa-spinner.fa-2x.fa-spin
  .col-xs-12(ng-if="!productListWaiting && !productList.length")
    .alert.alert-info.text-center
      | {{ searchFailed ? 'There are no products that match your search.' : 'No products created yet.' }}
  .col-xs-12(ng-if="!productListWaiting && productList.length")
    div(ng-switch="resultView")
      div(ng-switch-when="0")
        include ./ProductListView.jade
      div(ng-switch-default)
        include ./ProductGridView.jade

include ./ProductSearchFilterView.jade