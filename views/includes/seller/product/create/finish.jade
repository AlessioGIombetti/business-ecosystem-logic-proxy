form(name="stages[2].form", novalidate)
  .row
    .col-sm-8
      .form-group
        label Name
        input.form-control(
          type="text"
          name="name"
          ng-model="productInfo.name"
          required
          readonly
        )
    .col-sm-4
      .form-group
        label Version
        input.form-control(
          type="text"
          name="version"
          ng-model="productInfo.version"
          required
          readonly
        )
  .row
    .col-sm-8
      .form-group
        label Brand
        input.form-control(
          type="text"
          name="brand"
          ng-model="productInfo.brand"
          required
          readonly
        )
    .col-sm-4
      .form-group
        label ID Number
        input.form-control(
          type="text"
          name="productNumber"
          ng-model="productInfo.productNumber"
          required
          readonly
        )
  .form-group
    label Description
    textarea.form-control(
      rows="3"
      name="description"
      ng-model="productInfo.description"
      readonly
    )
  .form-group.text-right
    button.btn.btn-success(type="button", ng-click="createProduct()", ng-disabled="!stages[2].form.$valid")
      span Create