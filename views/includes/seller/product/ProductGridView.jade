.row(ng-controller="ProductListCtrl")
  .col-sm-12(ng-if="$productList.length")
    .flex-container
      .panel.panel-default.product.product-grid(
        ng-repeat="$product in $productList"
        ng-class="{ 'active' : isSelected($product)}"
      )
        .panel-heading
          a.thumbnail.product-logo(ng-click="showUpdateForm($product)")
            img(ng-src="{{ getPicture($product) }}", no-image)
          a.panel-title(ng-click="showUpdateForm($product)") {{ $product.name }}
          .panel-subtitle
            | Updated 
            time(am-time-ago="$product.lastUpdate")
          .panel-options.text-right
            button.btn.btn-sm.btn-default(
              type="button"
              bs-tooltip
              data-original-title="Add to bundle"
              ng-class="{ 'active' : isSelected($product) }"
              ng-click="selectProduct($product)"
            )
              i.fa.fa-fw.fa-clipboard
        .panel-body
          p.text-muted.text-small v{{ $product.version }}&nbsp;Â·&nbsp;{{ $product.brand }}
          .label-group(ng-switch="$product.isBundle")
            span.label(ng-class="$product.isBundle ? 'label-product-bandle' : 'label-product'")
              | {{ $product.isBundle ? 'Product bandle' : 'Product' }}
          .lifecycle-status-group
            .lifecycle-status-item.active(
              data-type="{{ $product.lifecycleStatus | lowercase }}"
              data-title="{{ $product.lifecycleStatus }}"
            )
              span.status
    ul.pager
      li.disabled
        a
          i.fa.fa-arrow-left
      li.disabled
        a
          i.fa.fa-arrow-right